# Timetable System Environment Variables
# ========================================
# Copy this file to .env and customize as needed
# All variables are prefixed with TIMETABLE_

# ==================== Core Settings ====================

# Root directory containing stage data
# Default: current working directory
# TIMETABLE_DATA_DIR=/path/to/your/data

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
# Default: INFO
TIMETABLE_LOG_LEVEL=INFO

# Path to log file (optional)
# If not set, logs only to console
# TIMETABLE_LOG_FILE=logs/timetable.log

# ==================== Behavior Flags ====================

# Strict mode: treat warnings as errors
# Default: false
TIMETABLE_STRICT_MODE=false

# Verbose output
# Default: false
TIMETABLE_VERBOSE=false

# ==================== Semester Configuration ====================

# Active semesters to process (comma-separated)
# Default: 1,3 (odd semesters)
# TIMETABLE_ACTIVE_SEMESTERS=1,3

# ==================== API Settings (for timetable[api]) ====================

# API host
# Default: 0.0.0.0
# TIMETABLE_API_HOST=0.0.0.0

# API port
# Default: 8000
# TIMETABLE_API_PORT=8000

# Enable CORS for all origins (development only!)
# Default: false
# TIMETABLE_CORS_ALL_ORIGINS=false

# ==================== Docker Settings ====================

# These are typically set in docker-compose.yml
# but can be overridden here

# TIMETABLE_DATA_DIR=/app/data
# TIMETABLE_LOG_FILE=/app/logs/timetable.log
