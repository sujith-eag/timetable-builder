{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://timetable.example.com/schemas/stage6/timetable_enriched.json",
  "title": "Enriched Timetable Schema",
  "description": "JSON schema for the final enriched timetable with complete session details",
  "type": "object",
  "required": ["metadata", "timetable_A"],
  "properties": {
    "metadata": {
      "type": "object",
      "description": "Metadata about the timetable generation",
      "required": ["generatedAt", "generator", "version", "sourceFile", "totalSessions", "description"],
      "properties": {
        "generatedAt": {
          "type": "string",
          "format": "date-time",
          "description": "Timestamp when the timetable was generated"
        },
        "generator": {
          "type": "string",
          "description": "Name of the script or tool that generated this timetable"
        },
        "version": {
          "type": "string",
          "pattern": "^\\d+\\.\\d+$",
          "description": "Version of the generator"
        },
        "sourceFile": {
          "type": "string",
          "description": "Source file used to generate this enriched timetable"
        },
        "totalSessions": {
          "type": "integer",
          "minimum": 1,
          "description": "Total number of sessions in the timetable"
        },
        "description": {
          "type": "string",
          "description": "Description of the timetable content"
        }
      },
      "additionalProperties": false
    },
    "timetable_A": {
      "type": "array",
      "description": "Array of enriched session objects",
      "items": {
        "type": "object",
        "description": "A complete enriched session with all details",
        "required": [
          "sessionId", "day", "slotId", "startTime", "endTime", "roomId",
          "subjectCode", "subjectTitle", "componentType", "facultyId", "facultyName",
          "studentGroupIds", "semester", "sections", "supportingStaff", "shortCode"
        ],
        "properties": {
          "sessionId": {
            "type": "string",
            "pattern": "^S_\\d+$",
            "description": "Unique session identifier"
          },
          "day": {
            "type": "string",
            "enum": ["Mon", "Tue", "Wed", "Thu", "Fri", "Sat"],
            "description": "Day of the week for the session"
          },
          "slotId": {
            "type": "string",
            "pattern": "^S\\d+(?:\\+S\\d+)?$",
            "description": "Time slot identifier (single or double slot)"
          },
          "startTime": {
            "type": "string",
            "pattern": "^([01]?[0-9]|2[0-3]):[0-5][0-9]$",
            "description": "Session start time in HH:MM format"
          },
          "endTime": {
            "type": "string",
            "pattern": "^([01]?[0-9]|2[0-3]):[0-5][0-9]$",
            "description": "Session end time in HH:MM format"
          },
          "roomId": {
            "type": "string",
            "enum": ["AB-402", "AB-411", "LAB-1", "LAB-2", "Lab"],
            "description": "Room identifier where the session takes place"
          },
          "subjectCode": {
            "type": "string",
            "pattern": "^(\\d{2}[A-Z]+\\d+|[A-Z]+_SEM\\d+)$",
            "description": "Subject code (year + subject identifier or special codes like PROCTOR_SEM1)"
          },
          "subjectTitle": {
            "type": "string",
            "minLength": 1,
            "description": "Full subject title"
          },
          "componentType": {
            "type": "string",
            "enum": ["theory", "practical", "tutorial"],
            "description": "Type of teaching component"
          },
          "facultyId": {
            "type": "string",
            "pattern": "^([A-Z]{1,4}|ALL_FACULTY|EXTERNAL)$",
            "description": "Faculty identifier (1-4 letters or special values)"
          },
          "facultyName": {
            "type": "string",
            "minLength": 1,
            "description": "Full faculty name"
          },
          "studentGroupIds": {
            "type": "array",
            "description": "Array of student group identifiers",
            "items": {
              "type": "string",
              "minLength": 1
            },
            "minItems": 1
          },
          "semester": {
            "type": "integer",
            "enum": [1, 3],
            "description": "Semester number"
          },
          "sections": {
            "type": "array",
            "description": "Array of section identifiers",
            "items": {
              "type": "string",
              "pattern": "^[A-Z]$"
            },
            "minItems": 1
          },
          "supportingStaff": {
            "type": "array",
            "description": "Array of supporting staff (can be empty)",
            "items": {
              "type": "object",
              "required": ["id", "name"],
              "properties": {
                "id": {
                  "type": "string",
                  "minLength": 1,
                  "description": "Staff identifier"
                },
                "name": {
                  "type": "string",
                  "minLength": 1,
                  "description": "Staff full name"
                }
              },
              "additionalProperties": false
            }
          },
          "shortCode": {
            "type": "string",
            "maxLength": 10,
            "description": "Short code for the subject"
          }
        },
        "additionalProperties": false
      },
      "minItems": 1
    }
  },
  "additionalProperties": false
}