{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://timetable.eaglecampus.edu/schemas/stage2/subjects2Full.schema.json",
  "title": "Stage 2 Subjects Full File",
  "description": "Schema for subjects2Full.json - subjects with full component and session details",
  "type": "object",
  "required": ["subjects"],
  "additionalProperties": false,
  "properties": {
    "subjects": {
      "type": "array",
      "description": "List of subjects with full details",
      "items": {
        "$ref": "#/definitions/SubjectFull"
      }
    }
  },
  "definitions": {
    "SubjectFull": {
      "type": "object",
      "description": "A subject with full component details",
      "required": ["subjectCode", "shortCode", "title", "creditPattern", "totalCredits", "department", "semester", "type", "components"],
      "additionalProperties": false,
      "properties": {
        "subjectCode": {
          "type": "string",
          "description": "Unique subject identifier",
          "minLength": 1
        },
        "shortCode": {
          "type": "string",
          "description": "Short code for the subject",
          "minLength": 1
        },
        "title": {
          "type": "string",
          "description": "Full title of the subject",
          "minLength": 1
        },
        "creditPattern": {
          "type": "array",
          "description": "Credit pattern [theory, tutorial, practical]",
          "items": {
            "type": "integer",
            "minimum": 0
          },
          "minItems": 3,
          "maxItems": 3
        },
        "totalCredits": {
          "type": "integer",
          "description": "Total credits",
          "minimum": 0
        },
        "department": {
          "type": "string",
          "description": "Department offering the subject"
        },
        "semester": {
          "type": "integer",
          "description": "Semester number",
          "minimum": 1,
          "maximum": 8
        },
        "isElective": {
          "type": "boolean",
          "description": "Whether this is an elective subject",
          "default": false
        },
        "type": {
          "type": "string",
          "description": "Subject type",
          "enum": ["core", "elective", "diff"]
        },
        "components": {
          "type": "array",
          "description": "Subject components",
          "items": {
            "$ref": "#/definitions/SubjectComponent"
          }
        },
        "priority": {
          "type": "string",
          "description": "Scheduling priority",
          "enum": ["high", "medium", "low", "external"]
        },
        "assignedTo": {
          "type": "string",
          "description": "Pre-assigned faculty"
        },
        "sections": {
          "type": "array",
          "description": "Assigned sections",
          "items": {
            "type": "string"
          }
        },
        "fixedTiming": {
          "$ref": "#/definitions/FixedTiming"
        },
        "notInMainTimetable": {
          "type": "boolean",
          "description": "Whether subject is excluded from main timetable"
        }
      }
    },
    "SubjectComponent": {
      "type": "object",
      "description": "A teaching component of a subject",
      "required": ["componentId", "componentType", "credits", "sessionDuration", "sessionsPerWeek", "totalWeeklyMinutes", "mustBeInRoomType", "blockSizeSlots", "mustBeContiguous"],
      "additionalProperties": false,
      "properties": {
        "componentId": {
          "type": "string",
          "description": "Unique component identifier",
          "minLength": 1
        },
        "componentType": {
          "type": "string",
          "description": "Type of component",
          "enum": ["theory", "tutorial", "practical"]
        },
        "credits": {
          "type": "integer",
          "description": "Credits for this component",
          "minimum": 0
        },
        "sessionDuration": {
          "type": "integer",
          "description": "Duration in minutes per session",
          "minimum": 1
        },
        "sessionsPerWeek": {
          "type": "integer",
          "description": "Number of sessions per week",
          "minimum": 0
        },
        "totalWeeklyMinutes": {
          "type": "integer",
          "description": "Total minutes per week",
          "minimum": 0
        },
        "mustBeInRoomType": {
          "type": "string",
          "description": "Required room type",
          "enum": ["lecture", "lab"]
        },
        "blockSizeSlots": {
          "type": "integer",
          "description": "Number of consecutive slots required",
          "minimum": 1
        },
        "mustBeContiguous": {
          "type": "boolean",
          "description": "Whether sessions must be in consecutive slots"
        }
      }
    },
    "FixedTiming": {
      "type": "object",
      "description": "Fixed timing constraint",
      "required": ["day", "slots"],
      "additionalProperties": false,
      "properties": {
        "day": {
          "type": "string",
          "description": "Day of week",
          "enum": ["Mon", "Tue", "Wed", "Thu", "Fri", "Sat"]
        },
        "slots": {
          "type": "array",
          "description": "Slot IDs",
          "items": {
            "type": "string"
          },
          "minItems": 1
        },
        "duration": {
          "type": "integer",
          "description": "Duration in minutes"
        }
      }
    }
  }
}
