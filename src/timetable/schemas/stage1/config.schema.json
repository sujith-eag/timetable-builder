{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://timetable.example.com/schemas/stage1/config.json",
  "title": "Timetable Configuration",
  "description": "Configuration for time slots, rooms, and scheduling constraints",
  "type": "object",
  "required": ["config"],
  "properties": {
    "config": {
      "type": "object",
      "required": [
        "dayStart",
        "dayEnd",
        "weekdays",
        "daySlotPattern",
        "breakWindows",
        "timeSlots",
        "theorySessionMinutes",
        "labTutorialSessionMinutes",
        "creditToHours",
        "validSlotCombinations",
        "sessionTypes",
        "resourceConstraints",
        "resources"
      ],
      "properties": {
        "dayStart": {
          "type": "string",
          "pattern": "^([01]?[0-9]|2[0-3]):[0-5][0-9]$",
          "description": "Day start time in HH:MM format"
        },
        "dayEnd": {
          "type": "string",
          "pattern": "^([01]?[0-9]|2[0-3]):[0-5][0-9]$",
          "description": "Day end time in HH:MM format"
        },
        "weekdays": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["Mon", "Tue", "Wed", "Thu", "Fri", "Sat", "Sun"]
          },
          "minItems": 1,
          "description": "Days of the week for scheduling"
        },
        "daySlotPattern": {
          "type": "object",
          "properties": {
            "Mon": { "type": "array", "items": { "type": "string" } },
            "Tue": { "type": "array", "items": { "type": "string" } },
            "Wed": { "type": "array", "items": { "type": "string" } },
            "Thu": { "type": "array", "items": { "type": "string" } },
            "Fri": { "type": "array", "items": { "type": "string" } },
            "Sat": { "type": "array", "items": { "type": "string" } }
          },
          "description": "Available slots per day"
        },
        "breakWindows": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["start", "end", "type"],
            "properties": {
              "start": { "type": "string" },
              "end": { "type": "string" },
              "type": { "type": "string", "enum": ["short", "lunch"] }
            }
          }
        },
        "timeSlots": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["slotId", "start", "end", "lengthMinutes"],
            "properties": {
              "slotId": { "type": "string" },
              "start": { "type": "string" },
              "end": { "type": "string" },
              "lengthMinutes": { "type": "integer", "minimum": 1 }
            }
          },
          "minItems": 1
        },
        "theorySessionMinutes": {
          "type": "integer",
          "minimum": 1
        },
        "labTutorialSessionMinutes": {
          "type": "integer",
          "minimum": 1
        },
        "creditToHours": {
          "type": "object",
          "required": ["theory", "tutorial", "practical"],
          "properties": {
            "theory": { "type": "integer", "minimum": 0 },
            "tutorial": { "type": "integer", "minimum": 0 },
            "practical": { "type": "integer", "minimum": 0 }
          }
        },
        "validSlotCombinations": {
          "type": "object",
          "properties": {
            "single": { "type": "array", "items": { "type": "string" } },
            "double": { "type": "array", "items": { "type": "string" } },
            "saturday": { "type": "array", "items": { "type": "string" } },
            "note": { "type": "string" }
          }
        },
        "sessionTypes": {
          "type": "object",
          "required": ["theory", "tutorial", "practical"],
          "properties": {
            "theory": { "$ref": "#/$defs/sessionType" },
            "tutorial": { "$ref": "#/$defs/sessionType" },
            "practical": { "$ref": "#/$defs/sessionType" }
          }
        },
        "resourceConstraints": {
          "type": "object",
          "required": [
            "maxConsecutiveSlotsPerFaculty",
            "maxDailySlotsPerStudentGroup",
            "minGapBetweenSameFaculty"
          ],
          "properties": {
            "maxConsecutiveSlotsPerFaculty": { "type": "integer", "minimum": 1 },
            "maxDailySlotsPerStudentGroup": { "type": "integer", "minimum": 1 },
            "minGapBetweenSameFaculty": { "type": "integer", "minimum": 0 }
          }
        },
        "resources": {
          "type": "object",
          "required": ["rooms"],
          "properties": {
            "rooms": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["roomId", "type", "capacity"],
                "properties": {
                  "roomId": { "type": "string" },
                  "type": { "type": "string", "enum": ["lecture", "lab"] },
                  "capacity": { "type": "integer", "minimum": 1 }
                }
              }
            }
          }
        }
      }
    }
  },
  "$defs": {
    "sessionType": {
      "type": "object",
      "required": ["duration", "requiresContiguous"],
      "properties": {
        "duration": { "type": "integer", "minimum": 1 },
        "requiresContiguous": { "type": "boolean" }
      }
    }
  }
}
